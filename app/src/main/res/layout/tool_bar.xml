<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentTop="true"
>


    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        fontPath="fonts/IRAN Sans Medium.ttf"
        android:textColor="@color/colorbattleshipgrey"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_view_back_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_left_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_close_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:src="@drawable/i_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_setting_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:src="@drawable/i_more_horiz"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_sync_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:src="@drawable/ic_sync_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_plus_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_clear_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/i_close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_save_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_content_save_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/filter_outline"
        android:visibility="gone" />
    <TextView
        android:id="@+id/text_view_add_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:text="افزودن مدارک"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/relative_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_qrcode_black_36dp"
        android:padding="8dp"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/relative_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_share_black_24dp"
        android:padding="8dp"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/relative_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:background="@mipmap/ic_edit"
        android:padding="8dp"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>